{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "heart-mp4": ["./heart-mp4/src/index.ts"],
      "heart-hls": ["./heart-hls/src/index.ts"],
      "heart-utils": ["./heart-utils/src/index.ts"],
      "heart-message": ["./heart-message/src/index.ts"],
    },
  },
  "include": ["./src", "./types/*.d.ts","./heart-mp4", "./heart-hls","./heart-utils", "./heart-message" ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
